<Window x:Class="MasterPol.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterPol"
        mc:Ignorable="d"
        Title="{Binding ElementName=MainFrame,Path=Content.Title}" Height="650" Width="1000" WindowStartupLocation="CenterScreen" MinHeight="650" MinWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Image Source="Pictures/Мастер пол.png" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="150,0,0,0"></Image>
            <TextBlock Text="«Мастер пол»" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" ></TextBlock>
        </Grid>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" VerticalAlignment="Center" HorizontalAlignment="Center"></Frame>
    </Grid>
</Window>
